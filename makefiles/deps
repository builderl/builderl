./rebar:
	$(ERL) -noshell -s inets -s ssl \
	  -eval 'httpc:request(get, {"$(REBARURL)", []}, [], [{stream, "./rebar"}])' \
	  -s init stop
	chmod +x ./rebar

## Take the local version if present, then check if it is installed, then download if none could be found
REBAR=$(shell (type ./rebar 2>/dev/null || type rebar 2>/dev/null || echo ./rebar) | tail -1 | awk '{ print $$NF }')

.PHONY: get-deps
get-deps: $(REBAR)
	$(REBAR) get-deps
	./bin/deps.esh get

.PHONY: rm-deps
rm-deps: $(REBAR)
	$(REBAR) del-deps
	./bin/deps.esh rm

.PHONY: redo-deps
redo-deps: $(REBAR)
	$(REBAR) del-deps
	$(REBAR) get-deps
	./bin/deps.esh rm get

compile-deps: $(REBAR)
	$(REBAR) compile

clean-deps: $(REBAR)
	$(REBAR) clean

.PHONY: check-rebar
check-rebar: $(REBAR)
