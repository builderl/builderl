./rebar:
	$(ERL) -noshell -s inets -s ssl \
	  -eval 'httpc:request(get, {"$(REBARURL)", []}, [], [{stream, "./rebar"}])' \
	  -s init stop
	chmod +x ./rebar

## Take the installed version if present first then try the local version
# REBAR=$(shell (type rebar 2>/dev/null || echo ./rebar) | tail -1 | awk '{ print $$NF }')

## Or take always the local version (it's known to compile riak_pb properly)
REBAR=$(shell echo ./rebar)

.PHONY: get-deps
get-deps: $(REBAR)
	$(REBAR) get-deps
	./bin/deps.esh get

.PHONY: rm-deps
rm-deps: $(REBAR)
	$(REBAR) del-deps
	./bin/deps.esh rm

.PHONY: redo-deps
redo-deps: $(REBAR)
	$(REBAR) del-deps
	$(REBAR) get-deps
	./bin/deps.esh rm get

compile-deps: $(REBAR)
	$(REBAR) compile

clean-deps: $(REBAR)
	$(REBAR) clean
